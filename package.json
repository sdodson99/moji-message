{
  "name": "moji-message",
  "version": "0.1.0",
  "description": "Make a message out of emojis.",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint:eslint": "eslint ./src --ext=.tsx,.ts,.html",
    "lint:prettier": "prettier --check ./src",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "fix:eslint": "eslint --fix ./src --ext=.tsx,.ts,.html",
    "fix:prettier": "prettier --write ./src",
    "fix": "npm run fix:eslint && npm run fix:prettier",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --ci",
    "test:update": "jest --updateSnapshot",
    "e2e": "playwright test",
    "e2e:update": "npm run e2e -- --update-snapshots",
    "predeploy": "npm run build",
    "deploy": "firebase deploy --only hosting",
    "deploy:stage": "firebase hosting:channel:deploy --expires 7d",
    "clean": "rm -rf dist"
  },
  "author": "Sean Dodson",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.27.1",
    "@types/jest": "^29.2.2",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "autoprefixer": "^10.4.13",
    "eslint": "^8.27.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-html": "^7.1.0",
    "firebase-tools": "^11.16.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "postcss": "^8.4.18",
    "prettier": "^2.7.1",
    "tailwindcss": "^3.2.2",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4",
    "vite": "^3.2.2"
  },
  "dependencies": {
    "@picmo/popup-picker": "^5.7.2",
    "copy-to-clipboard": "^3.3.2",
    "picmo": "^5.7.2"
  }
}
